{
  "name": "APRS Station Map",
  "build": {
    "dockerfile": "Dockerfile",
    "context": "..",
    "args": {
      "USER_UID": "${localEnv:UID:1000}",
      "USER_GID": "${localEnv:GID:1000}"
    }
  },
  "customizations": {
    "vscode": {
      "settings": {
        "terminal.integrated.defaultProfile.linux": "bash",
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "biomejs.biome"
      },
      "extensions": [
        "biomejs.biome",
        "eamodio.gitlens",
        "dbaeumer.vscode-eslint",
        "anthropic.claude-code",
        "continue.continue"
      ]
    }
  },
  "mounts": ["source=${localEnv:HOME}/.ssh,target=/home/devuser/.ssh,type=bind,readonly"],
  "forwardPorts": [3000, 3001],
  "postCreateCommand": "npm install && echo 'Dev Container Ready! Run: npm run dev'",
  "postStartCommand": "sudo chown -R devuser:devuser /workspace && npm install",
  "remoteUser": "devuser"
}
